@model IEnumerable<CrudMvc.Models.User>

@{
    ViewBag.Title = "Index";
   
}

<h2>Thong Tin</h2>

<p>
    <button class="btn ">@Html.ActionLink("Create New", "Create")</button>
<p>
    @using (Html.BeginForm("Index", "User", FormMethod.Get))
    {
        <b>Search</b>@Html.TextBox("searchString")
        <input type="submit" value="Search" />
    }
</p>

<table  class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CMND)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tuoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BaoHiem)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Ten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CMND)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tuoi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BaoHiem)
    </td>
    <td>
      
        <button type="button" class="btn bg-success"><i class="far fa-eye" ></i> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
        <button type="button" class="btn bg-info"><i class="fas fa-edit"></i>  @Html.ActionLink("Details", "Details", new { id = item.Id })</button>
        <button type="button" class="btn bg-danger"><i class="far fa-trash-alt"></i>  @Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
    </td>
    @*<td>
       
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
       
    </td>*@
</tr>
    }

</table>
@section scripts{
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
}
